                <div class="row">
                    <div class="col-md-12">
                        <!-- Advanced Tables -->
                        <div class="panel panel-default">
                            
                            <div class="panel-body">
                                <div class="table-responsive">
                                    
                                    
                                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                        <thead>
                                            <tr>

                                                <th>Select</th>
                                                <th>First Name</th>
                                                <th>Last Name</th>
                                                <th>DOB</th>
                                                <th>Highest Education</th>
                                                <th>Instructor Full Name</th>
                                                <th>Courses Taken</th>
                                                <th>Cohorts Enrolled</th>
                                                <th>Edit</th>
                                                <th>Delete</th>
                                                <th>Description</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                           <% @students.each do |my_student| %>
                                                 
                                                <tr class="main-student">
                                                    <td><input type="checkbox" class="my_chbox"></td>
                                                    <td><%= my_student.first_name %></td>
                                                    <td><%= my_student.last_name %></td>
                                                    <td><%= my_student.DOB %></td>
                                                    <td><%= my_student.highest_education %></td>
                                                    <td>
                                                      <ul><% my_student.instructors.each do |instr| %>
                                                          <li><%=instr.full_name %></li>
                                                        <% end %>   
                                                      </ul>
                                                    </td>
                                                    <td>
                                                      <ul><% my_student.courses.each do |course| %>
                                                          <li><%= course.name %></li>
                                                        <% end %>   
                                                      </ul>
                                                    </td>
                                                    <td>
                                                      <ul><% my_student.cohorts.each do |cohort| %>
                                                          <li><%= cohort.name %></li>
                                                        <% end %>   
                                                      </ul>
                                                     </td>
                                                     <td> <a href="<%= edit_student_path(my_student) %>">Edit</a></td>
         <td><%= link_to 'DeleteAjax', my_student, method: :delete, remote: true, class: 'delete-student' %></td>   
                                                     
                                                    <td><%= my_student.description %></td>
                                                </tr>
                                            
                                           <% end %>
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                 <th>Select</th>
